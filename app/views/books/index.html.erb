<h1>Books</h1>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Body</td>
      <td colspan="3"></td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th>
        <a href="/show">Show</a>
        <a href="/books/id/edit">Edit</a>
        <!--DestroyのURLが未記入です忘れないでね-->
        <a href="/show">Destroy</a>
        </th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: Book.new do |f| %>
<h3>title</h3>
<%= f.text_field :title %>

<h3>body</h3>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>