<h1>Books</h1>

<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Body</td>
      <td colspan="3"></td>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <th><%= book.title %></th>
      <th><%= book.body %></th>
      <th>
        <%= link_to "Show",book_path(book.id) %>
        <%= link_to "Edit",edit_book_path(book.id) %>
        <%= link_to "Destroy",book_path(book.id), method: :delete,"data-confilm" => "Are you sure?" %>-->
      </th>
    </tr>
    <% end %>
  </tbody>
</table>

<h2>New book</h2>
<%= form_with model: Book.new,method: :post do |f| %>
<h3>title</h3>
<%= f.text_field :title %>

<h3>body</h3>
<%= f.text_area :body %>

<%= f.submit 'Create Book' %>
<% end %>